<table cellpadding="2" cellspacing="2" border=1 style="border-width: 1px;" class="cmu_table">
  <tr class="student">
    <td>
      <%= image_tag("/images/student_male.jpg", :size => "50x50", :border=>"0", :alt=>"These fields can be edited by a faculty role") %>
    </td>
     <td>
       <%= link_to image_tag("/images/cmu_seal.jpg", :id => "icon", :size=>"75x75", :alt=>"Configure course", :title=>"Configure course"),  course.curriculum_url %><br/>
       <p><%= link_to "Course website", course.curriculum_url %> </p>
     </td>
     <td valign="bottom">
      <%= link_to image_tag("/images/my_teams2.gif", :id => "icon", :width=>"16", :height=>"16", :alt=>"My Teams", :title=>"My Teams"), "/courses/#{course.id}/teams_photos" %><br/>
      <p><a href="/courses/<%=course.id%>/teams_photos">Teams</a></p>
      </td>
      <td valign="bottom">
        <%= link_to image_tag("/images/effort_report_campus_semester.png", :width => "100", :border=>"0", :alt=>"Campus Semester View"),
                    :controller=> "effort_reports", :action=>"show", :id => params[:id], :week => nil, :only_path=>true%> <br/>
        <p><%= link_to 'Effort Reports', :controller=> "effort_reports", :action=>"show", :id => params[:id], :week => nil, :only_path=>true%></p>

      </td>
  </tr>
<% if current_user && (current_user.is_staff? || current_user.is_admin?) %>
  <tr class="staff">
    <td>
      <%= image_tag("/images/professor.jpg", :size => "50x50", :border=>"0", :alt=>"These fields can be edited by a faculty role") %>
    </td>
    <td>
      <%= link_to image_tag("/images/cmu_seal.jpg", :id => "icon", :size=>"75x75", :alt=>"Configure course", :title=>"Configure course"), configure_course_path(course) %><br/>
      <p><%= link_to 'Configure course', configure_course_path(course) %></p>
    </td>
    <td>
      <%= link_to image_tag("/images/cmu_seal.jpg", :id => "icon", :size=>"75x75", :alt=>"Team formation", :title=>"Team formation"), past_teams_list_path(course) %><br/>
      <p><%= link_to 'Team Formation', past_teams_list_path(course) %></p>
    </td><td>
      <%= link_to image_tag("/images/cmu_seal.jpg", :id => "icon", :size=>"75x75", :alt=>"Deliverables", :title=>"Deliverables"), course_deliverables_path(course) %><br/>
      <p><%= link_to 'Deliverables', course_deliverables_path(course) %></p>
    </td><td>
      <%= link_to image_tag("/images/cmu_seal.jpg", :id => "icon", :size=>"75x75", :alt=>"Edit curriculum pages", :title=>"Edit curriculum pages"), course_navigation_path(Course.first_offering_for_course_name(course.name)) %><br/>
      <p><%= link_to "Edit Curriculum Pages", course_navigation_path(Course.first_offering_for_course_name(course.name)) %></p>
    </td>
  </tr>
  <tr class="staff">
    <td>&nbsp;
    </td>
    <td>
      <%= link_to image_tag("/images/cmu_seal.jpg", :id => "icon", :size=>"75x75", :alt=>"Configure course", :title=>"Configure course"),  peer_evaluations_path(course) %><br/>
      <p><%= link_to 'Peer evaluations', peer_evaluations_path(course) %></p>
    </td>
    <td>&nbsp;
    </td>
    <td>&nbsp;
    </td>
    <td>&nbsp;
    </td>
  </tr>
<% end %>
</table>
